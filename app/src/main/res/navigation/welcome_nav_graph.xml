<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome_nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/signinFragment"
        android:name="com.example.moaiplanner.ui.welcome.SigninFragment"
        android:label="@string/sigin"
        tools:layout="@layout/signin_fragment" >
        <action
            android:id="@+id/action_signinFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.moaiplanner.ui.welcome.RegisterFragment"
        android:label="@string/signup"
        tools:layout="@layout/register_fragment" >
        <action
            android:id="@+id/action_registerFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.moaiplanner.ui.main.MainActivity"
        android:label="MainActivity" />
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.moaiplanner.ui.welcome.WelcomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/welcome_fragment" >
        <action
            android:id="@+id/action_welcomeFragment_to_signinFragment"
            app:destination="@id/signinFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_googleSignInActivity"
            app:destination="@id/googleSignInActivity" />
    </fragment>
    <activity
        android:id="@+id/googleSignInActivity"
        android:name="com.example.moaiplanner.ui.welcome.GoogleSignInActivity"
        android:label="activity_google_sign_in"
        tools:layout="@layout/activity_welcome" />
</navigation>